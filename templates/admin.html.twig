{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ form_start(twitterForm) }}
                {% form_theme twitterForm 'bootstrap_4_horizontal_layout.html.twig' %}
                {{ form_widget(twitterForm) }}
                {{ form_end(twitterForm) }}

            </div>
        </div>

    </div>


{% endblock %}
